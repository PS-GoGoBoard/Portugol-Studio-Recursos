			<entradas>
				<entrada tipodado="caracter">w</entrada>
			</entradas>
			<saidas>
				<saida tipodado="cadeia">Digite uma letra:</saida>
				<saida tipodado="cadeia">Não é uma vogal</saida>
			</saidas>
		</caso>
		<caso>
			<entradas>
				<entrada tipodado="caracter">a</entrada>
			</entradas>
			<saidas>
